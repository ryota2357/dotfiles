{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(cargo build *)",
      "Bash(cargo check *)",
      "Bash(cargo clippy *)",
      "Bash(cargo fmt *)",
      "Bash(cargo test *)",
      "Bash(gh issue list *)",
      "Bash(gh issue status *)",
      "Bash(gh issue view *)",
      "Bash(gh pr list *)",
      "Bash(gh pr status *)",
      "Bash(gh pr view *)",
      "Bash(gh run *)",
      "Bash(git blame *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git show *)",
      "Bash(grep *)",
      "Bash(ls *)",
      "Bash(rg *)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:docs.renovatebot.com)"
    ],
    "deny": [
      "Bash(sudo *)"
    ],
    "defaultMode": "plan"
  },
  "statusLine": {
    "type": "command",
    "command": "~/dotfiles/coding-agent/claude-code/statusline.sh"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/coding-agent/claude-code/hooks/notification.sh",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/coding-agent/claude-code/hooks/stop.sh",
            "async": true
          }
        ]
      }
    ]
  }
}
